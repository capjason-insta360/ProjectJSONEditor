<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   minWidth="21" minHeight="23"
				   alpha.disabled="0.5">
	
	<!-- host component -->
	<fx:Metadata>
		<![CDATA[ [HostComponent("spark.components.Button")] ]]>
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	
	<s:Rect left="0" right="0" top="0" bottom="0" radiusX="2" radiusY="2" >
		<s:fill>
			<s:SolidColor color="#333333" color.over="#3D3D3D" color.down="#282828" />
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0x1A1A1A" />
		</s:stroke>
	</s:Rect>
	
	<!--- arrow -->
	<s:Path right="6"
			verticalCenter="0"
			data="M 3.5 0.0 L 0.0 4.0 L 7.0 4.0 L 3.5 0.0 M 3.5 10.0 L 0.0 6.0 L 7.0 6.0 L 3.5 10.0">
		<s:fill>
			<s:SolidColor color="#FFFFFF" color.down="#4D4D4D"/>
		</s:fill>
	</s:Path>
	
</s:SparkButtonSkin>
