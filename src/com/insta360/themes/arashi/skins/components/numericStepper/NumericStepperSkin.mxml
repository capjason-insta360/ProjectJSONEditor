<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		minHeight="23" minWidth="60"
		alpha.disabled="0.5">

	<!-- host component -->
    <fx:Metadata>
    	<![CDATA[ [HostComponent("spark.components.NumericStepper")] ]]>
    </fx:Metadata> 
	
	<!-- states -->
	<s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>

	<!-- skin part -->
	<!--- @required -->
	<s:TextInput id="textDisplay" 
				 minHeight="0"
				 borderColor="#1A1A1A"
				 left="0" top="0" right="14" bottom="0"
				 focusRect="false"
                 contentBackgroundColor="#282828"
				 skinClass="com.insta360.themes.arashi.skins.components.textInput.TextInputSkin"
				 />

	<!-- skin part -->
	<!--- @optional -->
    <s:Button id="incrementButton" 
			  width="15" height="50%"
			  top="0" right="0"
			  tabEnabled="false" 
              skinClass="com.insta360.themes.arashi.skins.components.numericStepper.NumericStepperIncrementButtonSkin" />
              
	<!-- skin part -->
	<!--- @optional -->
	<s:Button id="decrementButton" 
			  width="15" height="50%"
			  right="0" bottom="0" 
			  tabEnabled="false" 
              skinClass="com.insta360.themes.arashi.skins.components.numericStepper.NumericStepperDecrementButtonSkin" />
        
</s:Skin>
