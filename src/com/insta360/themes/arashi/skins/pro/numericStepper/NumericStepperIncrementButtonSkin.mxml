<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
		minHeight="0">
    
	<!-- host component -->
    <fx:Metadata>
        <![CDATA[ [HostComponent("spark.components.Button")] ]]>
    </fx:Metadata> 
    
    <!-- states -->
	<s:states>
        <s:State name="up" />
        <s:State name="over"/>
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
	<!--- border/fill -->
	<s:Rect left="0" top="0" right="0" bottom="0">
		<s:stroke>
			<s:SolidColorStroke color="#191919"
								alpha="0.85" alpha.over="1" alpha.down="1"
								weight="1"
								joints="miter"
								caps="square"/>
		</s:stroke>
		<s:fill>
			<s:SolidColor color="#333333" color.over="#3D3D3D" />
		</s:fill>
	</s:Rect>

	<s:Line left="3.5" right="3.5" verticalCenter="0">
		<s:stroke>
			<s:SolidColorStroke color="#FFFFFF" color.down="#CCCCCC" alpha="0.8" alpha.over="0.9" />
		</s:stroke>
	</s:Line>

	<s:Line top="8.5" bottom="8.5" horizontalCenter="0">
		<s:stroke>
			<s:SolidColorStroke color="#FFFFFF" color.down="#CCCCCC" alpha="0.8" alpha.over="0.9" />
		</s:stroke>
	</s:Line>
    
</s:Skin>